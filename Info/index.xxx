  <script type="text/javascript">

    function refresh() {
      $.get("/reqSensors", function (data) {
        let content = "";
        data.forEach(function (element, index) {
          let sensor = "<li class='list-group-item justify-content-between align-items-center d-flex'> ";
          sensor += element.name;
          sensor += "<span class='badge";
          if (element.value == "ERR") {
            sensor += " badge-danger'>Fehler";
          }
          else if (element.value == "CRC") {
            sensor += " badge-danger'>CRC Fehler";
          }
          else if (element.value == "DER") {
            sensor += " badge-danger'>Gerätefehler";
          }
          else if (element.value == "UNP") {
            sensor += " badge-danger'>nicht verbunden";
          }
          else {
            sensor += " badge-light'>"
            sensor += element.value + "°C";
          }
          sensor += "</span> "
          sensor += "<span class='badge badge-light'>";
          sensor += element.offset;
          sensor += "</span> "
          if (element.target_temp != "-1") {
            sensor += "<span class='badge badge-light'>";
            sensor += element.target_temp + "°C";
            sensor += "</span> "
          }
          sensor += " <span class='badge";
          if (element.sw == true) {
            if (element.state == true) {
              sensor += " badge-success'>Events ok";
            }
            else {
              sensor += " badge-danger'>Event aktiv";
            }
          }
          else {
            sensor += " badge-dark'>Events deaktiviert";
          }
          sensor += "</span> ";
          sensor += "<span class='badge badge-info'> "
          sensor += element.mqtt;
          sensor += " </span> <a href='' class='badge badge-warning' data-toggle='modal' data-target='#sensor_modal' data-value='";
          sensor += index;
          sensor += "'> bearbeiten </a> </li>";
          content += sensor;
        });
        $('#listSensors').html(content);
      });
      $.get("/reqActors", function (data) {
        let content = "";
        data.forEach(function (element, index) {
          let actor = "<li class='list-group-item justify-content-between align-items-center d-flex'> ";
          actor += element.name;
          actor += "<span class='badge";
          if (element.state != true) {
            actor += " badge-danger'>OFF ";
          }
          else if (element.state == true && element.status == true) {
            actor += " badge-success'>ON: ";
            actor += element.power;
            actor += "%";
          }
          else {
            actor += " badge-dark'>OFF";
          }
          actor += "</span><span class='badge badge-light'>PIN";
          actor += element.pin;
          actor += "</span> ";
          actor += " <span class='badge";
          if (element.sw == true) {
            if (element.state == true) {
              actor += " badge-success'>Events ok";
            }
            else {
              actor += " badge-danger'>Event aktiv";
            }
          }
          else {
            actor += " badge-dark'>Events deaktivert";
          }
          actor += "</span> ";
          actor += "<span class='badge badge-info'>";
          actor += element.mqtt;
          actor += "</span><a href='' class='badge badge-warning' data-toggle='modal' data-target='#actor_modal' data-value='";
          actor += index;
          actor += "'>bearbeiten</a></li>";
          content += actor;
        });
        $('#listActors').html(content);
      });
      $.get("/reqInduction", function (data) {
        let inductionRender = "<li class='list-group-item d-flex justify-content-between align-items-center'> ";
        if (data.enabled) {
          inductionRender += "Relais Status<span class='badge";
          if (data.state != true && data.relayOn) {
            inductionRender += " badge-danger'> ON";
            inductionRender += "</span> </li> <li class='list-group-item d-flex justify-content-between align-items-center'>Leistung von CBPi angefordert<span class='badge badge-danger'>";
            inductionRender += data.power;
            inductionRender += "%</span> </li> <li class='list-group-item d-flex justify-content-between align-items-center'>Aktuelle Leistung<span class='badge badge-danger'> P";
            inductionRender += data.powerLevel;
			if (data.pl != "100") {
			inductionRender += "%</span> </li> <li class='list-group-item d-flex justify-content-between align-items-center'>Event Leistung Reduzierung auf<span class='badge badge-success'> P";
            inductionRender += data.pl;
			inductionRender += "%</span> </li>";
			}
			else {
			inductionRender += "%</span> </li> <li class='list-group-item d-flex justify-content-between align-items-center'>Events<span class='badge badge-dark'> ";
            inductionRender += "deaktiviert";
			inductionRender += "</span> </li>";
			}
          }
          else if (data.relayOn && data.state == true) {
